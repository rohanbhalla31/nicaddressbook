<form action="/tasklists">
Sort By:
<select name="list" onchange="this.form.submit();">
  <option>--Search--</option>
  <option value="id">Task ID</option>
  <option value="subject">Subject</option>
  <option value="startedon">Started On</option>
  <option value="targetdate">Target Date</option>
  <option value="priority">Priority</option>
  <option value="status">Current Status</option>

</select>
</form>
<br>
<table class="table1">
  <tr>
    <th>Task ID</th>
    <th>Subject</th>
    <th>Started On</th>
    <th>Tentative Target Date</th>
    <th>Priority</th>
    <th>Click to Download</th>
    <th>Current Status</th>
    <th>Task Type</th>
    <th>Visibility</th>
    <th></th>
    <th></th>
   
    <br><br><br>
  </tr>
</form>
  <% @tasklists.each do |tasklist| %>
   <tr>
    <td><%= tasklist.id %></td>
    <td><%= tasklist.subject.titlecase %></td>
    <td><%= tasklist.startdate %></td>
    <td><%= tasklist.targetdate %></td>
    <td><%= tasklist.priority %></td>
    <% if(tasklist.filename) %>
     <td><%= link_to "Download","/tasks/#{tasklist.username+'_'+tasklist.filename}" %></td>
    <% else %>
     <td></td>
    <% end %>
    <td><%= tasklist.currentstatus %></td>
    <td><%= tasklist.tasktype.titlecase %></td>
    <td><%= tasklist.tvisible.titlecase %></td>
    <td><%= link_to 'Edit Details', edit_tasklist_path(tasklist) %></td>
    <% if (tasklist.assignedto==tasklist.username) %>
    <td><%= link_to 'Delete', tasklist, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>


  </tr>
  <% end %>
</table>
